<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Title="Settings" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Repo Path InputBox -->
        <TextBlock Text="Repo Path:" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="input_repoPath" Margin="100,10,10,10" Grid.Row="0" VerticalAlignment="Center" Width="250"/>

        <!-- Tenant ID InputBox -->
        <TextBlock Text="Tenant ID:" Margin="10" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="input_tenantID" Margin="100,10,10,10" Grid.Row="1" VerticalAlignment="Center" Width="250"/>

        <!-- Save Button -->
        <Button x:Name="btn_Save" Content="Save" Margin="10" Grid.Row="3" HorizontalAlignment="Right" Width="100"/>
    </Grid>
</Window>